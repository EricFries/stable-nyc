<% if in_database? %>

	<h3><%= "#{@building.building_num} #{@building.street} #{@building.street_suffix.downcase.capitalize}, #{@building.city}, NY #{@building.zip}" %></h3>
	<h4>This building is rent stabilized.</h4>

<% else %>

	<h3><%= "#{@building.building_num} #{@building.street} #{@building.street_suffix.downcase.capitalize}" %></h3>
	<h4>This building isn't in our records. Check with DHCR to see if the units here are rent stabilized.</h4>

<% end %>